{ pkgs, ... }: ''
include <tunables/global>

/usr/bin/nginx {
	include "${pkgs.apparmor-profiles}/etc/apparmor.d/abstractions/base"
	include "${pkgs.apparmor-profiles}/etc/apparmor.d/abstractions/nameservice"

	/etc/nginx/** r,
	/etc/ssl/** r,
	/etc/core/** r, # site-local config dir

	/run/nginx.pid rwk,
	/var/{log,lib,cache}/nginx/** rwmk,
	/run/uwsgi/** rw,

	/usr/share/nginx/html r,
	/usr/share/nginx/html/** r,
	/srv/www r,
	/srv/www/** r,
	/var/empty r,
	/var/empty/** r,

	# Checks for lot of capabilities on start, fails if check is denied
	capability dac_read_search dac_override net_bind_service setuid setgid,
	/proc/sys/kernel/random/boot_id r,

	network inet tcp,
	network inet udp,
	network inet icmp,
}
''
